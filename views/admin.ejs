<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tiks admin</title>

    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
</head>

<body>
    <div id="messages"></div>

    <script>
        const serverURL = '<%= commonData.appName %>';
        
        function deleteName(name) {
            sendCommand("deletename " + name);
        }
        function sendCommand(command) {
            let msg = {
                name: "trainer",
                body: command,
            };
            socket.emit("message", msg);
        }

        function displayData(data) {
            let messages = '<table>';

            data.forEach((d) => {
                messages +=
                    `<tr><td><button onclick="deleteName('${d.name}')">delete name</button>${d.name}</td></tr>`;
            });
            document.getElementById("messages").innerHTML = messages + "</table>" +
            `<button onclick="sendCommand('clear')">Wipe messages</button>` +
            `<button onclick="sendCommand('delete')">Close class</button>`;
        }
        //-------------------------------------------------------------
        const socket = io(serverURL);
        socket.on("connection");
        sendCommand("refresh"); // force refresh
        socket.on("message", (data) => {
            displayData(data);
        });
    </script>
</body>
</html>
